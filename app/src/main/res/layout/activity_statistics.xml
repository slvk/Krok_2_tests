<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mycompany.listviewdemo.StatisticsActivity"


    >
<!--    android:clipChildren="true" -->
    <TableLayout

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:stretchColumns="0,1"

        >
<!-- android:background="@drawable/rounded" -->
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="1dp"
            android:background="@drawable/stat_row_design_even"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/stat_textsize"
                android:text="Задано питань"
                android:id="@+id/labelQuestCount"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/stat_textsize"
                android:text="0"
                android:id="@+id/QuestionsCount"

                />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="1dp"
            android:background="@drawable/stat_row_design_odd"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/stat_textsize"
                android:text="Правильних відповідей"
                android:id="@+id/lablelAnswCount"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/stat_textsize"
                android:text="0"
                android:id="@+id/RightAnswersCount"

                />
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="1dp"
            android:background="@drawable/stat_row_design_even"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/stat_textsize"
                android:text="Успішність"
                android:id="@+id/labelPercent"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/stat_textsize"
                android:text="0"
                android:id="@+id/RightAnswPercent"

                />

        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="1dp"
            android:background="@drawable/stat_row_design_odd"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/stat_textsize"
                android:text="Затрачено часу"
                android:id="@+id/labelTime"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/stat_textsize"
                android:text="0"
                android:id="@+id/TimeElapsed"


                />

        </TableRow>
    </TableLayout>

</LinearLayout>
